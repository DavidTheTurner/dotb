{
    "compilerOptions": {
      "jsx": "react",
      "module": "ES6",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "strictNullChecks": true,
      "paths": {
        "*": ["node_modules/*"]
      }
